#!/bin/bash

if [ $# -eq 0 ] || [ $1 == "game" ];
then

while true;
do

play ~/Music/Bash/BlasterMaster7.ogg
play ~/Music/Bash/SuperMario3BowserBattle.mp3
play ~/Music/Bash/WilyFortress.mp3

done

fi

if [ $1 == "clean" ];
then

ls -Q ~/Music/Bash/Warcraft\ II/* | xargs play

fi

if [ $1 == "relax" ];
then

while true;
do

play ~/Music/Bash/relax.mp3

done
fi

if [ $1 == "upbeat" ];
then

ls -Q ~/Music/Bash/Upbeat/*.mp3 | xargs play

fi

if [ $1 == "humor" ];
then

find -L ~/Music/Bash/Humor -name '*.mp3' -print0 | sort -Rz | xargs -0 play

fi

if [ $1 == "wakeup" ];
then

while true;
do

play ~/Music/Bash/wakeup.mp3

done
fi

if [ $1 == "malinche" ];
then

audiodisk=$(( $RANDOM % 5 ))
cd /home/jginns/Libros\ En\ Espa√±ol/Laura\ Esquivel/Malinche/Disk\ $audiodisk/
lines=`ls *.mp3 | wc -l`
cutlength=$((lines - $1))
ls -Q *.mp3 | sort | tail -n $cutlength | xargs play

fi
